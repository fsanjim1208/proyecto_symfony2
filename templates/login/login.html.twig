
{% extends 'base2.html.twig' %}
    {% block javascripts %}
        <script src="{{ asset('JS/validaLogin.js') }}" type="text/javascript"></script>
    {% endblock %}

{% block body %}
    <div class="c-contentForm">
        <h2 class="text-primary text-uppercase mt-5">Iniciar sesion</h2>
        <form class="centraFormulario" action="{{ path('app_login') }}" method="post">

            <div class="row g-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="email" class="form-control" id="username" name="_username" placeholder="Email" value="{{last_username}}">
                        <label for="username">Email</label>
                    </div>
                    <label class="errorEmail text-danger"></label>
                    <br>
                    <div class="form-floating">
                        <input type="password" class="form-control" id="password" name="_password" placeholder="Contraseña">
                        <label for="password">Contraseña</label>
                    </div>
                    <label class="errorPassword text-danger"></label>
                    <br>
                    <a href="{{path('app_forgot_password_request')}}">¿Ha olvidado su contraseña?</a>
                    <br><br>
                    <button class="btn btn-primary w-100 py-3" type="submit">Iniciar Sesion</button>
                    <p class="mt-3 mb-0">¿No está registrado?<p>
                    <a href="/register">¡Registrate!</a>
                </div>
            </div>
        </form>
    </div>

{% endblock %}

